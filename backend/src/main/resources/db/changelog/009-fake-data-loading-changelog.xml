    <!-- ========================================== -->
    <!-- CARGA DE DADOS FAKE - TDC SHEETS         -->
    <!-- ========================================== -->
    <!--
        Este changelog contém:
        - Dados fake de desenvolvimento (contexto: fake-data) - Apenas para dev/teste
        - Usuários, fichas de personagem e dados relacionados para testes
        
        ORDEM IMPORTANTE: Carregamos primeiro os dados que não dependem de foreign keys,
        depois os dados dependentes na ordem correta das dependências.
        
        CORREÇÃO: A foreign key habilidade_assinatura estava incorreta, apontando para
        habilidades_personagem.id quando deveria apontar para habilidade.id (dados base)
    -->
    
    <!-- 2.0 Correções necessárias -->
    
    <changeSet id="fake-data-000-fix-fk" author="Victor Gabriel" context="fake-data">
        <comment>Corrige foreign key habilidade_assinatura para apontar para tabela habilidade</comment>
        <dropForeignKeyConstraint baseTableName="ficha_personagem" constraintName="ficha_personagem_habilidade_assinatura_fkey"/>
        <addForeignKeyConstraint baseColumnNames="habilidade_assinatura" baseTableName="ficha_personagem" constraintName="ficha_personagem_habilidade_assinatura_fkey" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="habilidade" validate="true"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="ficha_personagem" constraintName="ficha_personagem_habilidade_assinatura_fkey"/>
            <addForeignKeyConstraint baseColumnNames="habilidade_assinatura" baseTableName="ficha_personagem" constraintName="ficha_personagem_habilidade_assinatura_fkey" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="habilidades_personagem" validate="true"/>
        </rollback>
    </changeSet>

