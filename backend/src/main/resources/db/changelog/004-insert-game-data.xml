            <column name="descricao" type="STRING"/>
            <column name="defesa_5" type="NUMERIC"/>
            <column name="defesa_10" type="NUMERIC"/>
            <column name="defesa_15" type="NUMERIC"/>
            <column name="defesa_20" type="NUMERIC"/>
            <column name="pm_5" type="NUMERIC"/>
            <column name="pm_10" type="NUMERIC"/>
            <column name="pm_15" type="NUMERIC"/>
            <column name="pm_20" type="NUMERIC"/>
            <column name="pv_5" type="NUMERIC"/>
            <column name="pv_10" type="NUMERIC"/>
            <column name="pv_15" type="NUMERIC"/>
            <column name="pv_20" type="NUMERIC"/>
            <column name="habilidade_especial" type="STRING"/>
            <column name="modificador_xp" type="NUMERIC"/>
            <column name="nivel_maximo" type="NUMERIC"/>
        </loadData>
        
        <rollback>
            DELETE FROM classe WHERE nome IN ('GUERREIRO', 'RANGER', 'MAGO', 'CLERIGO', 'LADRAO', 'BARDO');
        </rollback>
    </changeSet>

