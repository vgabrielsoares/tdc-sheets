    <!-- Changeset: Criação dos tipos ENUM -->
    <changeSet id="001-create-enums" author="tdc-sheets">
        <comment>Criação dos tipos ENUM para o sistema TDC</comment>
        
        <!-- Enum para nomes de arquetipos -->
