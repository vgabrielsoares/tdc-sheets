            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Tabela de talentos e poderes do arquétipo -->
        <createTable tableName="talento__poderes_arquetipo">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="arquetipo_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="nivel_minimo" type="INTEGER"/>
            <column name="classe_id" type="BIGINT"/>
            <column name="linhagem" type="BOOLEAN" defaultValue="false"/>
            <column name="requisitos_talentos_poderes_id" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Tabela de requisitos de talentos e poderes -->
        <createTable tableName="requisitos_talentos_poderes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="talento_poder_requisito" type="BIGINT"/>
            <column name="atributo" type="atributos"/>
            <column name="valor_minimo" type="INTEGER"/>
            <column name="linhagem_id" type="BIGINT"/>
            <column name="habilidade_id" type="BIGINT"/>
            <column name="grau_minimo" type="grau_pericia"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Índices para performance -->
        <createIndex tableName="arquetipos_personagem" indexName="idx_arquetipos_personagem_arquetipo">
            <column name="arquetipo_id"/>
        </createIndex>
        
        <createIndex tableName="classes_personagem" indexName="idx_classes_personagem_classe">
            <column name="classe_id"/>
        </createIndex>
        
        <createIndex tableName="habilidades_personagem" indexName="idx_habilidades_personagem_ficha">
            <column name="ficha_personagem_id"/>
        </createIndex>
        
        <createIndex tableName="habilidades_personagem" indexName="idx_habilidades_grau">
            <column name="grau_habilidade"/>
        </createIndex>
        
        <createIndex tableName="feiticos" indexName="idx_feiticos_circulo">
            <column name="circulo"/>
        </createIndex>
        
        <!-- Unique constraints -->
        <addUniqueConstraint tableName="habilidades_personagem" columnNames="ficha_personagem_id, habilidade_id" constraintName="uk_habilidades_personagem_ficha_habilidade"/>
        <addUniqueConstraint tableName="feiticos_personagem" columnNames="ficha_personagem_id, feiticos_id" constraintName="uk_feiticos_personagem_ficha_feitico"/>
        
        <!-- Constraints de validação -->
        <sql>
            ALTER TABLE "arquetipos_personagem" ADD CONSTRAINT check_nivel_arquetipo_positivo 
              CHECK (nivel_arquetipo > 0);
              
            ALTER TABLE "classes_personagem" ADD CONSTRAINT check_nivel_classe_positivo 
              CHECK (nivel > 0);
              
            ALTER TABLE "feiticos" ADD CONSTRAINT check_circulo_valido 
              CHECK (circulo BETWEEN 0 AND 9);
        </sql>
        
        <!-- Rollback -->
        <rollback>
            DROP TABLE IF EXISTS requisitos_talentos_poderes;
            DROP TABLE IF EXISTS talento__poderes_arquetipo;
            DROP TABLE IF EXISTS feiticos_personagem;
            DROP TABLE IF EXISTS classes_feitico;
            DROP TABLE IF EXISTS feiticos;
            DROP TABLE IF EXISTS habilidades_personagem;
            DROP TABLE IF EXISTS uso_habilidade;
            DROP TABLE IF EXISTS habilidade;
            DROP TABLE IF EXISTS proficiencias_classe;
            DROP TABLE IF EXISTS habilidades_classe;
            DROP TABLE IF EXISTS requisitos_classe;
            DROP TABLE IF EXISTS classes_personagem;
            DROP TABLE IF EXISTS classe;
            DROP TABLE IF EXISTS proficiencias_arquetipo;
            DROP TABLE IF EXISTS habilidades_arquetipo;
            DROP TABLE IF EXISTS caracteristica_arquetipo;
            DROP TABLE IF EXISTS arquetipos_personagem;
            DROP TABLE IF EXISTS arquetipo;
        </rollback>
    </changeSet>
</databaseChangeLog>
