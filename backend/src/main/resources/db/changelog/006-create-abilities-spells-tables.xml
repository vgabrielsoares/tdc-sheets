    <!-- Changeset: Criação das tabelas de habilidades e feitiços -->
    <changeSet id="006-create-abilities-spells-tables" author="tdc-sheets">
        <comment>Criação das tabelas para habilidades, talentos, feitiços e arquétipos</comment>
        
        <!-- Tabela de arquétipos -->
        <createTable tableName="arquetipo">
            <column name="id" type="BIGINT" autoIncrement="true">
