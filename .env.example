# =================================
# TDC Sheets - Configurações de Ambiente
# =================================

# Database Configuration
DB_NAME=tdc_sheets
DB_USERNAME=tdc_user
DB_PASSWORD=tdc_password_change_in_production
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-in-production
JWT_EXPIRATION=86400000
SPRING_PROFILES_ACTIVE=dev

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
VITE_API_URL=http://localhost:8080
VITE_APP_NAME=TDC Sheets RPG
VITE_APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG

# Development Tools
ADMINER_PORT=8081

# =================================
# Configurações de Produção
# =================================
# Para produção, altere as seguintes variáveis:
# - DB_PASSWORD: Use uma senha forte e complexa
# - JWT_SECRET: Use um secret de pelo menos 32 caracteres
# - SPRING_PROFILES_ACTIVE=prod
# - LOG_LEVEL=WARN
# - LOG_LEVEL_APP=INFO
# - Remova a seção de Development Tools

